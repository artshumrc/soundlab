{
	"kind":"Deployment",
	"apiVersion":"extensions/v1beta1",
	"metadata": {
		"name":"orpheus-app-dep",
		"labels": {
			"name":"orpheus-app-dep"
		}
	},
	"spec":{
		"replicas": 1,
		"template": {
			"metadata": {
				"labels": {
					"name":"orpheus-app-pod"
				}
			},
			"spec": {
				"containers": [
					{
						"name": "orpheus-app-cont",
						"image": "us.gcr.io/archimedes-01201/orpheus-app:test",
						"ports": [
							{
								"name": "http-server",
								"containerPort": 3001
							}
						],
						"env": [
							{
								"name": "NODE_ENV",
								"value": "production"
							},
							{
								"name": "SESSION_SECRET",
								"valueFrom": {
									"secretKeyRef": {
										"name": "session-secret",
									}
								}
							},
							{
								"name": "JWT_SECRET",
								"valueFrom": {
									"secretKeyRef": {
										"name": "jwt-secret",
									}
								}
							},
							{
								"name": "DB_HOST",
								"value": "db.orphe.us"
							},
							{
								"name": "DB_NAME",
								"valueFrom": "orpheus"
							},
							{
								"name": "CLIENT_SERVER",
								"value": "orphe.us"
							},
							{
								"name": "WS_SERVER_PORT",
								"value": 80
							},
							{
								"name": "WS_SERVER_HOST",
								"value": "ws.orphe.us"
							},
							{
								"name": "WS_SERVER_URI",
								"value": "subscriptions"
							},
							{
								"name": "DEFAULT_LANGUAGE",
								"value": "en"
							},
							{
								"name": "AWS_BUCKET",
								"value": "iiif-orpheus"
							}
						]
					}
				]
			}
		}
	}
}
